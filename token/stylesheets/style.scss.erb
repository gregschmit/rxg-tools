body {
    font-family: Helvetica, Verdana, sans-serif;
    font-size: 120%;

    margin: 0;
    padding: 0;

    background-color: #ffffff;
    color: #000000;
}

h1 {
  font-weight: normal;
  font-size: 1.8em;
}

.wrapper {
  width: 100%;
}

.wrapper-head {
  background-color: #0f67c5;
  color: #ffffff;
  padding: .1em 0;
}

.wrapper-content {
  width: 70%;
  margin: auto;
}

.main {
  padding: 1em 0;
}

.footer {
  font-size: .7em;
}

.note {
  font-size: .5em;
  color: #999999;
}
